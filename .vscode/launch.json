{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Python: Django",
        "type": "python",
        "request": "launch",
        "program": "${workspaceFolder}/manage.py",
        "args": [
          "runserver",
          "--noreload"
        ],
        "django": true,
        "stopOnEntry": false,
        "cwd": "${workspaceFolder}",
        "env": {
          "PYTHONPATH": "${workspaceFolder}",
          "DJANGO_SETTINGS_MODULE": "projet_web.settings"
        },
        "envFile": "${workspaceFolder}/.env",
        "debugOptions": [
          "WaitOnAbnormalExit",
          "WaitOnNormalExit",
          "RedirectOutput"
        ],
        "console": "integratedTerminal",
        "pythonPath": "${workspaceFolder}/.venv/bin/python",
        "djangoSettings": "projet_web.settings"
      }
    ]
  }
  